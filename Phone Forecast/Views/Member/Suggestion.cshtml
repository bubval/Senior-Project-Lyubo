@model Phone_Forecast.Models.PhoneForecastView.PhoneSuggestion

@{
    ViewData["Title"] = "Suggestion";

    await Html.RenderPartialAsync("SuggestionPartial/_HardwareSelection", Model);
    if(Model.Charts.Count > 0)
    {
        await Html.RenderPartialAsync("SuggestionPartial/_Chart", Model);
        await Html.RenderPartialAsync("SuggestionPartial/_SelectedPhoneList", Model);
    }

    if(Model.Charts.Count == 1)
    {
        // Display that there is no need to calculate scores
    }
    if(Model.Charts.Count > 1)
    {
        await Html.RenderPartialAsync("SuggestionPartial/_Scores", Model);
    }


}