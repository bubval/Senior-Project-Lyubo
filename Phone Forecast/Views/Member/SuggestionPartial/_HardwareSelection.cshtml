@model Phone_Forecast.Models.PhoneForecastView.PhoneSuggestion;

<form asp-action="InputSpecs" id="myform" class="m-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-md-3 p-1">
            <input name="storage" placeholder="Storage" type="number" class="form-control" />
        </div>
        <div class="col-md-3 p-1">
            <input name="cpuCoreCount" placeholder="CPU Core Count" type="number" class="form-control" />
        </div>
        <div class="col-md-3 p-1">
            <input name="cpuSpeed" placeholder="CPU Speed" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3 p-1">
            <input name="ram" placeholder="RAM" type="number" class="form-control" />
        </div>
        <div class="col-md-3 p-1">
            <input name="frontCameraMgpx" placeholder="Front Camera Mgpx" type="number" class="form-control" />
        </div>
        <div class="col-md-3 p-1">
            <input name="backCameraMgpx" placeholder="Back Camera Mgpx" type="number" class="form-control" />
        </div>
        <div class="col-md-3 p-1">
            <input name="rearCameraCount" placeholder="Back Camera Count" type="number" class="form-control" />
        </div>
    </div>

    <div class="row col-md-auto m-2">
        <div class="col p-1">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="hasMemoryCardReader" />
                <label class="form-check-label">
                    Memory Card Reader
                </label>
            </div>
        </div>
        <div class="col p-1">
            <div class="form-check">
                <input name="headphoneOutput" type="checkbox" class="form-check-input" />
                <label class="form-check-label">Headphone Output</label>

            </div>
        </div>
        <div class="col p-1">
            <div class="form-check">
                <input name="is5gCapable" type="checkbox" class="form-check-input" />
                <label class="form-check-label">5G Capable</label>

            </div>
        </div>
        <div class="col p-1">
            <div class="form-check">
                <input name="exchangableBattery" type="checkbox" class="form-check-input" />
                <label class="form-check-label">Exchangable Battery</label>

            </div>
        </div>
        <div class="col p-1">
            <div class="form-check">
                <input name="wirelessCharging" type="checkbox" class="form-check-input" />
                <label class="form-check-label">Wireless charging</label>

            </div>
        </div>
        <div class="col p-1">
            <div class="form-check">
                <input name="waterResistance" type="checkbox" class="form-check-input" />
                <label class="form-check-label">Water resistance</label>

            </div>
        </div>
        <div class="col p-1">
            <div class="form-check">
                <input name="fastCharging" type="checkbox" class="form-check-input" />
                <label class="form-check-label">Fast charging</label>

            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <input type="submit" name="Submit" class="btn btn-success w-100" />
    </div>
</form>
