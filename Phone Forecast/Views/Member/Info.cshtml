            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Has4g)
                @Html.DisplayFor(model => model.Has4g)
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Has5g)
                @Html.DisplayFor(model => model.Has5g)
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.HasBluetooth)
                @Html.DisplayFor(model => model.HasBluetooth)
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.HasGps)
                @Html.DisplayFor(model => model.HasGps)
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.HasWifi)
                @Html.DisplayFor(model => model.HasWifi)
            </div>
        </div>

        <div class="row pb-5 pt-5">
            <div class="col-12">
                <h5 class="font-weight-bold">Camera Information</h5>
                <hr />
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.HasRearCamera)
                @Html.DisplayFor(model => model.HasRearCamera)
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.HasFrontCamera)
                @Html.DisplayFor(model => model.HasFrontCamera)
            </div>
