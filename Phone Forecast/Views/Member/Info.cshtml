                @Html.DisplayFor(model => model.HasGPU)
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.GPU)
                @Html.DisplayFor(model => model.GPU)
            </div>
        </div>

        <div class="row pb-5 pt-5">
            <div class="col-12">
                <h5 class="font-weight-bold">Connectors and Communication Information</h5>
                <hr />
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.HasHeadphoneOutput)
                @Html.DisplayFor(model => model.HasHeadphoneOutput)
            </div>
            <div class="col-4">
