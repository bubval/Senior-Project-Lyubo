@model Phone_Forecast.Models.DbContexts.Hardware
@using Phone_Forecast.Utilities

@{
    ViewData["Title"] = "Info";
}

    <div class="container">
        <h1>@Model.PhoneModel.GetDisplayName()</h1>

        <div class="row pb-5 pt-5">
            <div class="col-12">
                <h5 class="font-weight-bold">CPU (System on Chip) Information</h5>
                <hr />
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Cpu)
                @Html.DisplayFor(model => model.Cpu)
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProcessorCoreCount)
                @Html.DisplayFor(model => model.ProcessorCoreCount)
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProcessorCoreSpeed)
                @Html.DisplayFor(model => model.ProcessorCoreSpeed)GHz
            </div>
        </div>



        <div class="row pb-5 pt-5">
            <div class="col-12">
                <h5 class="font-weight-bold">Memory Infomration</h5>
                <hr />
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.RAM)
                @Html.DisplayFor(model => model.RAM)GB
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.InternalStorageSpace)
                @Html.DisplayFor(model => model.InternalStorageSpace)GB
            </div>
            <div class="col-4">
                @Html.DisplayNameFor(model => model.HasMemoryCardReader)
                @Html.DisplayFor(model => model.HasMemoryCardReader)
            </div>
        </div>



        <div class="row pb-5 pt-5">
            <div class="col-12">
                <h5 class="font-weight-bold">Graphical Processing Information</h5>
                <hr />
            </div>
